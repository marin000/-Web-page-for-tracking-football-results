{% extends 'league/selectedLeague.html.twig' %}

{% block title %}Football results{% endblock %}
{% block body %}
{{ parent() }}


<div class="float-left" style="width: 60%">
        <form method="post">
            <h5>Matchday:{{ matchday.filters.matchday }}</h5>
               <table class="table table-striped">
                <tr>
                <th>Home Team</th>
                <th></th>
                <th>Away Team</th>
                <th colspan="3">Result</th>
                </tr>
                <tr>
                    {% for match in matchday.matches %} 
                 <tr> 
                    <td>{{ match.homeTeam.name }}</td>
                    <td>-</td>
                  <td> {{ match.awayTeam.name}} </td>
                  <td> {{ match.score.fullTime.homeTeam }} </td>
                  <td>:</td>
                  <td> {{ match.score.fullTime.awayTeam }} </td>
                </tr>
                {% endfor %}
        
                </tr>
                <tr>
                </tr>
            </table>
        </form>
        </div>
{% endblock %}