{% extends 'myProfile/user.html.twig' %}

{% block title %}Football results{% endblock %}
{% block body %}
{{ parent() }}
<br>
<h4 align="center">Favourites</h4><br>
<div class="float-left" style="width: 24%">
<h4>Teams</h4><br>
            <table class="table table-striped">
                <tr>
                    <th>Name</th>
                    <th></th>
                </tr>
                {% for club in favClubs %}
                <tr>
                   <td><a href="{{ path('selectedTeam', {name: club.leagueName,id: club.leagueId,tid: club.clubId}) }}"> 
                        {{ club.clubName}} </a></td>
                <td>
                    <a href="{{ path('delFavClub',{cid: club.id}) }}" class="btn btn-outline-primary btn-sm">Unfollow</a>
                </td>
                </tr>
                {% endfor %}
            </table>
</div>

<div class="float-left" style="width: 24%;margin-left: 2%;margin-right: 2%">
<h4>Players</h4><br>
            <table class="table table-striped">
                <tr>
                    <th>Name</th>
                    <th></th>
                </tr>
                {% for player in favPlayers %}
                <tr>
                   <td><a href="{{ path('selectedPlayer', {name: player.leagueName,id: player.leagueId,tid: player.clubId,pid: player.playerId}) }}"> 
                        {{ player.playerName}} </a></td>
                <td>
                    <a href="{{ path('delFavPlayer',{pid: player.id}) }}" class="btn btn-outline-primary btn-sm">Unfollow</a>
                </td>
                </tr>
                {% endfor %}
            </table>
</div>

<h4 align="center">Matches</h4><br>
<div class="float-left" style="width: 48%">
                    <table class="table table-striped">
                        <tr>
                            <th>Home Team</th>
                            <th></th>
                            <th>Away Team</th>
                            <th colspan="3">Result</th>
                            <th>Time</th>
                            <th></th>
                        </tr>
                        {% set i = 0 %}
                        {% for match in arrMatch %} 
                        <tr>
                            <td>{{ match.match.homeTeam.name }}</td>
                           <td>-</td>
                           <td>{{ match.match.awayTeam.name }}</td>
                           <td>{{ match.match.score.fullTime.homeTeam }}</td>
                            <td>:</td>
                            <td>{{ match.match.score.fullTime.awayTeam }}</td>
                            <td>{{ match.match.utcDate }} </td>
                            <td><a href="{{ path('delFavMatch',{mid: favMatches[i].id}) }}" class="btn btn-outline-primary btn-sm">Unfollow</a>
                            </td>
                        </tr>
                        {% set i = i + 1 %}
                        {% endfor %} 
                    </table>
        </div>
{% endblock %}
